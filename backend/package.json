{
  "name": "invoice-api",
  "version": "1.0.0",
  "description": "Invoice Builder API - NestJS + MongoDB",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "setup:stripe": "ts-node -r tsconfig-paths/register scripts/setup-stripe-products.ts",
    "setup:portal": "ts-node -r tsconfig-paths/register scripts/setup-customer-portal.ts",
    "add:features": "ts-node -r tsconfig-paths/register scripts/add-pro-features.ts",
    "fix:client-totals": "ts-node -r tsconfig-paths/register scripts/fix-client-totals.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/throttler": "^5.1.1",
    "axios": "^1.13.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dinero.js": "^2.0.0-alpha.14",
    "helmet": "^7.1.0",
    "joi": "^18.0.1",
    "mongoose": "^8.0.3",
    "nanoid": "^3.3.7",
    "nest-winston": "^1.10.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "puppeteer": "^21.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "resend": "^3.0.0",
    "rxjs": "^7.8.1",
    "stripe": "^19.2.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "zod": "^3.22.4"
